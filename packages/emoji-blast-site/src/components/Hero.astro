---
import { Button } from "./Button.tsx";
import Title from "./Title.astro";
---

<div id="hero">
	<div id="contents">
		<Title as="h1" class="hero-title" />

		<p class="hero-description">
			ðŸŽ† Blasts emoji like fireworks all up in your HTML page. ðŸŽ‡
		</p>

		<div class="buttons">
			<Button as="a" className="button" href="/apis/emoji-blast">APIs</Button>
			<Button as="a" className="button" href="/demos/basic">Demos</Button>
			<span class="between"></span>
			<Button as="button" className="button" id="clicker">Trigger</Button>
		</div>
	</div>

	<div id="blaster"></div>
</div>

<style>
	#hero {
		height: 100%;
		overflow: hidden;
		position: relative;
		text-align: center;
		width: 100%;
	}

	#hero::after {
		content: "";
		opacity: 0;
		top: 0;
		display: block;
		right: 0;
		bottom: 0;
		left: 0;
		position: absolute;
		transition: var(--transitionSlow) opacity;
	}

	#hero.loaded::after {
		opacity: 1;
		background: radial-gradient(var(--sl-color-bg) 30%, transparent 70%);
	}

	#contents {
		display: flex;
		flex-direction: column;
		font-family: monospace;
		gap: 2rem;
		margin: 4rem 2rem 5rem;
		position: relative;
		z-index: 1;
	}

	.hero-description,
	.hero-title {
		position: relative;
		z-index: 1;
	}

	.hero-title {
		font-size: 2.5rem;
	}

	.hero-description::after,
	.hero-title::after {
		background: radial-gradient(var(--sl-color-bg) 30%, transparent 70%);
		bottom: 0;
		content: "";
		left: 0;
		opacity: 0;
		position: absolute;
		right: 0;
		top: 0;
		transition: var(--transitionSlow) opacity;
		z-index: -1;
	}

	#hero.loaded .hero-description::after,
	#hero.loaded .hero-title::after {
		opacity: 0.5;
	}

	.buttons {
		align-items: center;
		display: flex;
		flex-direction: column;
		gap: 2rem;
		justify-content: center;
	}

	.button {
		box-shadow: 0 0 2rem var(--sl-color-bg);
	}

	.between {
		width: 1rem;
		background: currentColor;
		height: 1px;
		content: "";
		display: block;
	}

	p {
		font-size: 1.35rem;
	}

	#blaster {
		bottom: 0;
		left: 0;
		overflow: hidden;
		position: absolute;
		right: 0;
		top: 0;
		z-index: -1;
		opacity: 1;
		transition: var(--transitionSlow) opacity;
	}

	#hero.loaded #blaster {
		opacity: 0.5;
	}

	@media (min-width: 700px) {
		.buttons {
			flex-direction: row;
		}

		.between {
			width: 1px;
			height: 1rem;
		}
	}
</style>
